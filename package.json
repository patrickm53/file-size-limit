{
  "private": true,
  "scripts": {
    "bump": "./scripts/bump",
    "test": "jest --coverage --forceExit && eslint . && sh scripts/max-listeners-check.sh"
  },
  "workspaces": [
    "packages/preset-small-lib",
    "packages/preset-big-lib",
    "packages/preset-app",
    "packages/dual-publish",
    "packages/size-limit",
    "packages/webpack",
    "packages/webpack-why",
    "packages/webpack-css",
    "packages/time",
    "packages/file"
  ],
  "devDependencies": {
    "@logux/eslint-config": "^46.1.0",
    "check-dts": "^0.6.3",
    "clean-publish": "^3.4.3",
    "cross-spawn": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^5.1.1",
    "jest": "^27.3.1",
    "print-snapshots": "^0.4.2"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "node/no-unsupported-features/es-syntax": "off",
      "security/detect-non-literal-require": "off",
      "security/detect-non-literal-regexp": "off",
      "node/global-require": "off",
      "no-console": "off"
    },
    "overrides": [
      {
        "files": "*.test.js",
        "rules": {
          "node/no-extraneous-require": "off"
        },
        "globals": {
          "describe": "readonly",
          "it": "readonly",
          "expect": "readonly",
          "beforeAll": "readonly",
          "beforeEach": "readonly",
          "afterEach": "readonly",
          "jest": "readonly"
        }
      },
      {
        "files": "packages/*/test/**/*.js",
        "rules": {
          "node/no-unpublished-require": "off"
        }
      },
      {
        "files": "packages/size-limit/run.js",
        "rules": {
          "consistent-return": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "packages/size-limit/test/fixtures",
    "**/errors.ts"
  ],
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/size-limit/test/fixtures"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.13.0"
  }
}
