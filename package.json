{
  "private": true,
  "scripts": {
    "postinstall": "./each yarn",
    "clean": "rimraf api.md coverage/",
    "api": "documentation build packages/*/*.js -f md -o api.md",
    "spell": "yarn api && yaspeller-ci *.md",
    "test": "jest --coverage && eslint-ci . && yarn spell"
  },
  "workspaces": [
    "packages/size-limit",
    "packages/webpack",
    "packages/time",
    "packages/file"
  ],
  "devDependencies": {
    "@logux/eslint-config": "^30.0.2",
    "@logux/sharec-config": "^0.3.5",
    "cross-spawn": "^6.0.5",
    "documentation": "^12.1.1",
    "eslint": "^6.1.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.3",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "rimraf": "^2.6.3",
    "yaspeller-ci": "^1.0.1"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node",
    "rules": {
      "security/detect-non-literal-require": "off",
      "security/detect-non-literal-regexp": "off",
      "require-atomic-updates": "off",
      "global-require": "off"
    },
    "overrides": [
      {
        "files": "*.test.js",
        "rules": {
          "node/no-extraneous-require": "off"
        }
      },
      {
        "files": "packages/*/test/**/*.js",
        "rules": {
          "node/no-unpublished-require": "off"
        }
      },
      {
        "files": "packages/size-limit/run.js",
        "rules": {
          "consistent-return": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "old",
    "packages/size-limit/test/fixtures"
  ],
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/old",
      "<rootDir>/packages/size-limit/test/fixtures"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "linter",
      "JS",
      "polyfills",
      "MobX",
      "UI",
      "Autoprefixer",
      "PostCSS",
      "Browserslist",
      "EmojiMart",
      "Logux",
      "webpackâ€™s",
      "bundler",
      "Vue",
      "Rollup",
      "CI",
      "gzip",
      "js",
      "KB",
      "nanoid",
      "npm",
      "Storeon",
      "Travis",
      "webpack",
      "Versioning",
      "JSDoc"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "sharec": {
    "version": "0.3.5"
  }
}
