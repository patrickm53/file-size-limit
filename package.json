{
  "private": true,
  "scripts": {
    "bump": "./scripts/bump",
    "postinstall": "./scripts/each yarn",
    "test": "jest --coverage --forceExit && eslint . && yaspeller *.md packages/*/*.md && sh scripts/max-listeners-check.sh"
  },
  "workspaces": [
    "packages/preset-small-lib",
    "packages/preset-big-lib",
    "packages/preset-app",
    "packages/dual-publish",
    "packages/size-limit",
    "packages/webpack",
    "packages/time",
    "packages/file"
  ],
  "devDependencies": {
    "@logux/eslint-config": "^44.2.0",
    "@logux/sharec-config": "^0.8.5",
    "cross-spawn": "^7.0.3",
    "dual-publish": "^1.0.3",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.17.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^28.0.2",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "print-snapshots": "^0.3.2",
    "simple-pre-commit": "^1.2.1",
    "typescript": "^4.2.2",
    "yaspeller": "^7.0.0"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "node/no-unsupported-features/es-syntax": "off",
      "security/detect-non-literal-require": "off",
      "security/detect-non-literal-regexp": "off",
      "node/global-require": "off"
    },
    "overrides": [
      {
        "files": "*.test.js",
        "rules": {
          "node/no-extraneous-require": "off"
        }
      },
      {
        "files": "packages/*/test/**/*.js",
        "rules": {
          "node/no-unpublished-require": "off"
        }
      },
      {
        "files": "packages/size-limit/run.js",
        "rules": {
          "consistent-return": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "packages/size-limit/test/fixtures",
    "**/errors.ts"
  ],
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/size-limit/test/fixtures"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "simple-pre-commit": "npx lint-staged",
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "linter",
      "JS",
      "polyfills",
      "MobX",
      "UI",
      "Autoprefixer",
      "PostCSS",
      "Browserslist",
      "EmojiMart",
      "Logux",
      "webpackâ€™s",
      "bundler",
      "Vue",
      "Rollup",
      "CI",
      "gzip",
      "js",
      "KB",
      "nanoid",
      "npm",
      "Storeon",
      "Travis",
      "webpack",
      "Versioning",
      "JSDoc",
      "Puppeter",
      "estimo",
      "bundlers",
      "CLI",
      "CRM",
      "brotli",
      "PnP",
      "ES",
      "GitHub"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.5"
  }
}
